<div id="ajax-results-container" style="display:none;">
</div>

<%= form_tag("/contact", method: "post", id: 'contact-us', remote: true, 'data-type' => :json) do %>
  <div class="__row">
    <%# label_tag(:name, "Name") %>
    <%= text_field_tag(:user_name, '', placeholder: 'Name', class: '__half-width', required: true) %>

    <%# label_tag(:email, "Email") %>
    <%= text_field_tag(:email, '', placeholder: 'Email', class: '__half-width', required: true) %>
  </div>  

  <div class="__row">
    <%# label_tag(:subject, "Subject") %>
    <%= text_field_tag(:subject, '', placeholder: 'Subject', class: '__full-width', required: true) %>
  </div>

  <div class="__row">
    <%# label_tag(:message, "Message") %>
    <%= text_area_tag(:message, '', placeholder: 'Message', class: '__full-width', required: true) %>
  </div>
  
  <%= submit_tag("Send", class: '__submit', id: 'submit-contact-author') %>
<% end %>

<div class='spinner-container' id='form-spinner' style="display:none;">
  <i class='fa fa-refresh fa-5x fa-spin'></i>
</div>